{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "ES6",
    "lib": [
      "es2016"
    ]
  },
  "include": [
    "src/**/*",
    "spec/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
